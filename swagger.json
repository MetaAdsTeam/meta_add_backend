        "responses": {
          "200": {
            "description": "list of TimeSlot",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimeSlot"
                }
              }
            }
          }
        }
      }
    },
    "/playbacks": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "get all Playback's",
        "description": "Get all Playback's joined by Creative, Advertiser, TimeSlot, AdSpot\n",
        "responses": {
          "200": {
            "description": "list of Playback's'",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_3"
                }
              }
            }
          }
        }
      }
    },
    "/playback/id/{id}": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "get TimeSlot",
        "description": "get Playback by {id}",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "get Playback by {id}",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Playback",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Playback"
                }
              }
            }
          }
        }
      }
