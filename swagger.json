{
  "openapi": "3.0.0",
  "info": {
    "title": "MetaAds front",
    "description": "Meta ads front-end API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://metaads.team/tornado",
      "description": "MetaAds API"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "get authorise key",
        "description": "Get authorise key",
        "parameters": [
          {
            "name": "login",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JWT key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          }
        }
      }
    },
    "/adspot/id/{id}": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "get adspot",
        "description": "Get by {id} AdSpot joined with AdSpotType",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Numeric ID of the AdSpot to get",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "get AdSpot by{id}",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdSpot"
                }
              }
            }
          }
        }
      }
    },
    "/adspot_stats/id/{id}": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "get AdSpotStats",
        "description": "Get AdSpotStats by {id}",
