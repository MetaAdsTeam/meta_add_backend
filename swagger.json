          "200": {
            "description": "list of available AdSpotType's",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_1"
                }
              }
            }
          }
        }
      }
    },
    "/timeslots": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "get all TimeSlot's",
